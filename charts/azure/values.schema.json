{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["subscriptionID", "scraper", "tenantID"],
  "properties": {
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "labels": {
      "type": "object"
    },
    "scraper": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"]
    },
    "subscriptionID": {
      "type": "string"
    },
    "organisation": {
      "type": "string"
    },
    "tenantID": {
      "type": "string"
    },
    "connectionDetails": {
      "type": "object",
      "properties": {
        "connection": {
          "type": "string"
        },
        "clientID": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "valueFrom": {
              "type": "object",
              "properties": {
                "serviceAccount": {
                  "type": "string"
                },
                "helmRef": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "configMapKeyRef": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "secretKeyRef": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "clientSecret": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "valueFrom": {
              "type": "object",
              "properties": {
                "serviceAccount": {
                  "type": "string"
                },
                "helmRef": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "configMapKeyRef": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                },
                "secretKeyRef": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "exclusions": {
      "type": "object",
      "properties": {
        "activityLogs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}

